<div class="columns col-xl">
    <div class="column col-3"></div>
    <div class="column col-6 col-md-12">
        <h3>Create student advert</h3>
        {{#if validationErrors.length}}
        <div class="toast toast-error">
            {{validationErrors}}
        </div>
        {{/if}}
        <form action="" method="POST">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <div class="form-group">
                <label class="form-label" for="titleInput">Title</label>
                <input class="form-input {{css_class}}" id="titleInput" type="text" name="title" placeholder="Title" value="{{title}}" required>
            </div>
            <div class="form-group">
                <label class="form-label" for="bodyInput">Body</label>
                <textarea class="form-input {{css_class}}" id="bodyInput" name="body" placeholder="Textarea" rows="5">{{body}}</textarea required>
            </div>
            <div class="form-group">
                <label class="form-label" for="option">Field</label>
                <select class="form-select {{css_class}}" id="option" name="field" value='{{field}}'>
                    <option>Choose an option</option>
                    <option>Tech</option>
                    <option>All</option>
                </select>
            </div>
            <div class="form-group">
                <label class="form-label" for="contactInput">Contact</label>
                <input class="form-input {{css_class}}" id="contactInput" type="text" name="contact" placeholder="Contact" value="{{contact}}" required>
            </div>
            <div class="form-group">
                <label class="form-label" for="startdateInput">start date</label>
                <input class="form-input {{css_class}}" id="startdateInput" type="date" name="startdate" value="{{startdate}}" required>
            </div>
            <div class="form-group">
                <label class="form-label" for="enddateInput">End date</label>
                <input class="form-input {{css_class}}" id="enddateInput" type="date" name="enddate" value="{{enddate}}" required>
            </div>
            <div class="form-group">
                <input class="form-submit column col-12 btn" type="submit" placeholder="Create" value="Create">
            </div>
        </form>
        <br>
    </div>
    <div class="column col-3"></div>
</div>