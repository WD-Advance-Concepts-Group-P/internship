<div class="columns col-xl">
    <div class="column col-3"></div>
    <div class="column col-6 col-md-12">
        <h3>View recruiter adverts</h3>
        {{#if validationErrors.length}}
        <div class="toast toast-error">
            {{validationErrors}}
        </div>
        {{/if}}
        {{#if Posts.length}}
            {{#each Posts}}
                <div class="card">
                    <div class="card-header">
                        <div class="card-title h5"><a>{{this.dataValues.title}}</a></div>
                        <div class="card-title h6"><a href="/advert/{{this.dataValues.id}}?type=recruiter">Advert</a></div>
                        {{#if ../deleteOrUpdate}}
                            <form action="/delete/advert" method="POST">
                                <input type="hidden" name="_csrf" value="{{../csrfToken}}">
                                <input type="hidden" name="id" value="{{this.dataValues.id}}">
                                <div class="form-group">
                                    <input class="form-submit" type="submit" placeholder="Delete" value="Delete">
                                </div>
                            </form>
                            <a href="/update/advert?type=recruiter&id={{this.dataValues.id}}">Update</a>
                        {{/if}}
                        <div class="card-subtitle text-gray">
                            <a href="/send/chat/{{this.dataValues.posted_by}}">Send message</a>
                            <ul>
                                <li>{{this.dataValues.field}}</li>
                                <li>{{this.dataValues.contact}}</li>
                                <li>{{this.dataValues.website}}</li>
                                <li>{{this.dataValues.deadline_date}}</li>
                                <li>{{this.dataValues.posted_by}}</li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-body" id="card-content">
                        {{{this.dataValues.body}}}
                    </div>
                    <!--
                        use this when mysql is the db

                        <div class="card-header">
                        <div class="card-title h5"><a>{{this.title}}</a></div>
                        <div class="card-subtitle text-gray">
                            <a href="/chat/{{this.posted_by}}">Send message</a>
                            <ul>
                                <li>{{this.field}}</li>
                                <li>{{this.contact}}</li>
                                <li>{{this.website}}</li>
                                <li>{{this.deadline_date}}</li>
                                <li>{{this.posted_by}}</li>
                            </ul>
                        </div>
                        </div>
                        <div class="card-body" id="card-content">
                            {{{this.body}}}
                        </div>
                    -->
                    <br>
                </div>
                <br>
            {{/each}}
        {{else}}
        <h1>No adverts yet</h1>
        {{/if}}
    </div>
    <div class="column col-3"></div>
</div>