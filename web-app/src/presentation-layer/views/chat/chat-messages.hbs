<meta http-equiv="refresh" content="30" />

<section class="chat-messages-wrapper">

    <div class="columns">

        <div class="chat-message-inner column col-5">

            <h1>My messages</h1>
            {{#if messages.length}}

                {{#each messages}}

                    <div class="divider"></div>

                    <span class="text-bold">Sender id: </span>
                    <p>{{this.sender_id}}</p>

                    <span class="text-bold">Receiver id: </span>
                    <p>{{this.receiver_id}}</p>
                    <span class="text-bold">Created at: </span>
                    <p>{{this.created_at}}</p>
                    <span class="text-bold">Message: </span>
                    <p>{{{this.content}}}</p>

                {{/each}}   

                <div class="divider"></div>

                <form action="" method="POST">
                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
                    <div class="form-group">
                        <label class="form-label" for="messageInput">Message</label>
                        <input class="form-input" id="messageInput" type="text" name="message" placeholder="Message" required>
                    </div>
                    <div class="form-group">
                        <input class="form-submit" type="submit" placeholder="Send" value="Send">
                    </div>
                </form>

            {{/if}}
        </div>

        <div class="chat-message-inner column col-5 col-ml-auto">

            <h1>Received messages</h1>
            {{#if chats.length}}

                {{#each chats}}

                    <div class="divider"></div>

                    <span class="text-bold">Sender id: </span>
                    <p>{{this.sender_id}}</p>

                    <span class="text-bold">Receiver id: </span>
                    <p>{{this.receiver_id}}</p>
                    <span class="text-bold">Created at: </span>
                    <p>{{this.created_at}}</p>
                    <span class="text-bold">Message: </span>
                    <p>{{{this.content}}}</p>

                {{/each}}   

            {{/if}}
        </div>
    </div>

</section>