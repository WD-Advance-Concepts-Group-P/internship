<div class="column">
    <div class="column col-11">
        {{#if validationErrors.length}}
            <p>{{validationErrors}}</p>
        {{/if}}
        <form action="" method="POST">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            {{#if username.length}}
            <div class="form-group">
                <label class="form-label" for="usernameInput">Username</label>
                <input class="form-input is-error" id="usernameInput" type="text" name="username" placeholder="Username" value="{{username}}" required>
            </div>
            {{else}}
            <div class="form-group">
                <label class="form-label" for="usernameInput">Username</label>
                <input class="form-input is-error" id="usernameInput" type="text" name="username" placeholder="Username" required>
            </div>
            {{/if}}
            {{#if email.length}}
            <div class="form-group">
                <label class="form-label" for="emailInput">Email</label>
                <input class="form-input is-error" id="emailInput" type="text" name="email" placeholder="Email" value="{{email}}" required>
            </div>
            {{else}}
            <div class="form-group">
                <label class="form-label" for="emailInput">Username</label>
                <input class="form-input is-error" id="emailInput" type="text" name="email" placeholder="Email" required>
            </div>
            {{/if}}
            <div class="form-group">
                <label class="form-label" for="passwordInput">Password</label>
                <input class="form-input is-error" id="passwordInput" type="password" name="password" placeholder="Password" required>
            </div>
            <div class="form-group">
                <input class="form-submit" type="submit" placeholder="Signup">
            </div>
        </form>
    </div>
</div>