
<section class="columns">

    <div class="auth-container column col-4 col-mx-auto">
        <h1>Register</h1>

        {{#if validation.errors.length}}
            {{#each validation.errors}}
                <div class="toast toast-error">
                    {{this.msg}}
                </div>
            {{/each}}
        {{/if}}

		<div class="divider"></div>

        <form action="" method="POST">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            {{#if username.length}}
            <div class="form-group">
                <label class="form-label" for="usernameInput">Username</label>
                <input class="form-input is-error" id="usernameInput" type="text" name="username" placeholder="Username" value="{{username}}" required>
            </div>
            {{else}}
            <div class="form-group">
                <label class="form-label" for="usernameInput">Username</label>
                <input class="form-input" id="usernameInput" type="text" name="username" placeholder="Username" required>
            </div>
            {{/if}}
            {{#if email.length}}
            <div class="form-group">
                <label class="form-label" for="emailInput">Email</label>
                <input class="form-input is-error" id="emailInput" type="text" name="email" placeholder="Email" value="{{email}}" required>
            </div>
            {{else}}
            <div class="form-group">
                <label class="form-label" for="emailInput">Email</label>
                <input class="form-input" id="emailInput" type="text" name="email" placeholder="Email" required>
            </div>
            {{/if}}
            <div class="form-group">
                <label class="form-label" for="passwordInput">Password</label>
                <input class="form-input" id="passwordInput" type="password" name="password" placeholder="Password" required>
            </div>
            <div class="form-group">
                <label class="form-label" for="option">Account Type</label>
                <select class="form-select" id="option" name="accountType">
                    <option>Student</option>
                    <option>Recruiter</option>
                </select>
            </div>
            <div class="form-group">
                <input class="form-submit column col-12 btn" type="submit" placeholder="Signup" value="Register">
            </div>
        </form>
        <div class="divider text-center" data-content="OR"></div>
        {{#if googleUrlStudent}}
        <a href="{{googleUrlStudent}}" class="column col-12 btn mb-2">Create account w/ Google as <span class="text-bold">Student</span></a>
        {{/if}}
        {{#if googleUrlRecruiter}}
        <a href="{{googleUrlRecruiter}}" class="column col-12 btn mb-2">Create account w/ Google as <span class="text-bold">Recruiter</span></a>
        {{/if}}
    </div>

</section>